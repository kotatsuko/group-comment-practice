<div class="search_form">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['グループ名'], ['動画タイトル'], ['説明文'], ['すべて']]) %>
    <%= f.select :video_type, options_for_select([['映画'], ["30分アニメ"], ["ドラマ"], ["YouTube"], ["その他"]]) %>
    <%= f.submit "検索", class: "btn btn-primary", id: "search-button" %>
  <% end %>
</div>